<% provide(:title, 'User Profiles') %>

<div class="row">
  <div class="four wide column">
    <%= render 'layouts/sidebar' %>
  </div>
  <div class="twelve wide column">
    <% if user_signed_in? %>
      <%= form_tag profiles_path, :method => 'get', :class => "ui small form",
         :id => "user_search" do %>
        <div class="ui icon input">
          <%= text_field_tag :search, params[:search],
          placeholder: "Search user by Last name or Username",
          type: "text" %>
          <%# button_tag(type: 'submit', class: "ui button") do %>
             <i class="search icon"></i>
          <%# end %>

        </div>
      <% end %>
    <% end %>
    <div id="users" class="segment-dist">
      <%= render 'profiles_list' %>
    </div>
  </div>
</div>
